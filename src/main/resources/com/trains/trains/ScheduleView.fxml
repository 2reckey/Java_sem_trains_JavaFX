<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.trains.trains.ScheduleController">
    <children>
        <TableView fx:id="table" prefHeight="363.0" prefWidth="700.0">
            <columns>
                <TableColumn fx:id="from" prefWidth="163.0" text="Откуда" />
                <TableColumn fx:id="to" prefWidth="107.0" text="Куда" />
                <TableColumn fx:id="fromDate" minWidth="6.0" prefWidth="125.0" text="Дата отправления" />
                <TableColumn fx:id="fromTime" prefWidth="102.0" text="Время отправления" />
            <TableColumn fx:id="toDate" prefWidth="368.0" text="Дата приезда" />
            <TableColumn fx:id="toTime" prefWidth="368.0" text="Время приезда" />
            <TableColumn fx:id="price" prefWidth="368.0" text="Цена" />
            <TableColumn fx:id="trainName" prefWidth="368.0" text="Имя поезда" />
            </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
        </TableView>
        <Button layoutY="363.0" mnemonicParsing="false" onAction="#toHome" prefHeight="37.0" prefWidth="700.0" style="-fx-background-color: #000;" text="Назад" textFill="WHITE">
            <font>
                <Font name="Arial" size="16.0" />
            </font>
            <cursor>
                <Cursor fx:constant="HAND" />
            </cursor>
        </Button>
    </children>
</AnchorPane>
